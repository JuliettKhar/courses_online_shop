<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="post" class="course-form">
    <div class="input-field col s6">
        <input name="title" placeholder="Placeholder" id="title" type="text" class="validate" required
               value="{{course.title}}">
        <label for="title">Course title</label>
        <span class="helper-text" data-error="Enter title" data-success="right"></span>
    </div>
    <div class="input-field col s6">
        <input name="price" placeholder="Placeholder" id="price" type="number" class="validate" required min="1"
               value="{{course.price}}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Enter price" data-success="right"></span>
    </div>
    <div class="input-field col s6">
        <input name="image" placeholder="Placeholder" id="img" type="text" class="validate" required
               value="{{course.image}}">
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="Enter URL" data-success="right"></span>
    </div>

    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn btn-primary">Edit course</button>
</form>
<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn red">Delete course</button>
</form>