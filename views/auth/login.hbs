<div class="authSpec">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}
            <h1>Log in</h1>
            <form action="/authSpec/login" method="post">
                <div class="input-field col s12">
                    <input name="email" id="remail" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Enter email" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <input name="password" id="rpassword" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Enter password" data-success="right"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn btn-primary">Log in</button>
                <p><a href="/authSpec/reset">Forgot password?</a></p>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            <h1>Register</h1>
            <form action="/authSpec/register" method="post" novalidate>
                <div class="input-field col s12">
                    <input name="email" id="remail" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Enter email" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <input name="password" id="rpassword" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Enter password" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <input name="confirm" id="confirm" type="password" class="validate" required>
                    <label for="confirm">Confirm password</label>
                    <span class="helper-text" data-error="Enter password" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <input name="name" id="name" type="text" class="validate" required>
                    <label for="name">Enter name</label>
                    <span class="helper-text" data-error="Enter name" data-success="right"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn btn-primary">Register</button>
            </form>

        </div>
    </div>
</div>